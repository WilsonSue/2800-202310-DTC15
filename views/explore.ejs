<%- include("templates/header") %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Job Listings - Explore</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }

      .header {
        background-color: rgb(103, 169, 231);
        padding: 1rem;
        text-align: center;
        color: white;
      }

      .search-bar {
        display: flex;
        justify-content: center;
        margin: 1rem;
      }

      .search-bar input[type="text"] {
        width: 60%;
        padding: 0.5rem;
      }

      .search-bar button {
        padding: 0.5rem 1rem;
        background-color: rgb(103, 169, 231);
        color: white;
        border: none;
        cursor: pointer;
      }

      .job-listings {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem;
      }

      .job-listing {
        background-color: #f2f2f2;
        width: 80%;
        padding: 1rem;
        margin: 0.5rem;
        box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.12),
          0px 1px 2px rgba(0, 0, 0, 0.24);
      }

      .job-listing h3 {
        margin-top: 0;
      }

      /* Filter menu */
      .filter-menu {
        display: none;
        position: absolute;
        background-color: white;
        padding: 1rem;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
      }

      .filter-menu label {
        display: block;
        cursor: pointer;
      }
    </style>
    <script>
      function redirectToFilterPage() {
        window.location.href = "/filter";
      }
      function redirectToPopulatedListingsPage() {
        window.location.href = "/populatedListings";}
    </script>

  </head>

  <body>
    <div class="header">
      <h1>Explore Job Listings</h1>
    </div>

    <div class="search-bar">
      <input type="text" placeholder="Search for job listings..." />
      <button onclick="redirectToPopulatedListingsPage()">Search</button>
      <button onclick="redirectToFilterPage()">Filter</button>
      <div class="filter-menu">
        <label
          ><input type="checkbox" name="filter" value="full-time" />
          Full-Time</label
        >
        <label
          ><input type="checkbox" name="filter" value="part-time" />
          Part-Time</label
        >
        <label
          ><input type="checkbox" name="filter" value="remote" /> Remote</label
        >
        <label
          ><input type="checkbox" name="filter" value="internship" />
          Internship</label
        >
      </div>
    </div>

     <div class="job-listings">

      <% for(let i=0; i < listings.length; i++) { %>
          <%- include('templates/joblisting.ejs', {listing: listings[i]}); %>
      <% } %>
      
    </div>
  </body>
</html>
