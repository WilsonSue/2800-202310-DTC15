<%- include("templates/header") %>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Home Page - Job Search</title>
        <style>
            .search-container {
                text-align: center;
                color: white;
            }

            .search-container h1 {
                font-size: 2.5rem;
                margin-bottom: 1rem;
            }

            .search-container input[type="text"] {
                width: 60%;
                padding: 0.5rem;
            }

            .search-container button {
                padding: 0.5rem 1rem;
                background-color: white;
                color: rgb(103, 169, 231);
                border: none;
                cursor: pointer;
                margin-left: 0.5rem;
            }
        </style>
    </head>

    <body>

        <div class="search-container">
            <h1>Search Jobs</h1>
            <form action="/search" method="GET">
                <input name="query" type="text" placeholder="Search jobs...">
                <button type="submit">Search</button>
            </form>
        </div>
<h2>Last Search Term:</h2>
<p>
    <%= lastSearchTerm %>
</p>

<h2>Last Search Results:</h2>
<% if (lastSearchResults.length> 0) { %>
    <% lastSearchResults.forEach(listing=> { %>
        <div>
            <h3>
                <%= listing.JobTitle %>
            </h3>
            <h4>
                <%= listing.CompanyName %>
            </h4>
            <p>
                <%= listing.JobDescription %>
            </p>
        </div>
        <% }) %>
            <% } else { %>
                <p>No last search results to display.</p>
                <% } %>
                    </body>

                    </html>
                    <%- include("templates/footer") %>

    </html>
    <%- include("templates/footer") %>