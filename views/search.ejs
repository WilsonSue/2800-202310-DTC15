<%- include("templates/header") %> <%- include("templates/nav") %>
<div class="search-container">
  <h4 class="search-heading">Search Jobs</h4>
  <form
    id="search-bar"
    class="container-fluid mb-3"
    action="/search"
    method="GET"
  >
    <div class="input-group">
      <input
        name="query"
        type="text"
        class="form-control rounded-start"
        placeholder="Search jobs..."
      />
      <span class="input-group-text" id="basic-addon1"
        ><button id="search-submit-btn" type="submit">Search</button></span
      >
    </div>
  </form>
  <h6 class="search-heading-sub">Last Search Term</h6>
  <span class="badge text-bg-light"><%= lastSearchTerm %></span>

  <h6 class="search-heading-sub">Last Search Results</h6>
  <% if (lastSearchResults.length > 0) { %> <% for (var i = 0; i <
  lastSearchResults.length; i++) { %> <% var listing = lastSearchResults[i]; %>
  <div class="card mb-3" id="card-<%= listing._id %>">
    <div class="card-body shadow-sm">
      <div class="row">
        <h6 class="col"><%= listing.JobTitle %></h6>
      </div>
      <p class="mb-0">
        <i class="fas fa-building fa-sm"></i>
        <small><%= listing.CompanyName %></small>
      </p>
      <p class="mb-0">
        <i class="fa fa-map-marker-alt fa-sm"></i>
        <small><%= listing.Location %></small>
      </p>
      <div class="row d-flex flex-row">
        <% if (listing.JobType !== "None Given") { %>
        <p class="mb-0 py-0">
          <span class="badge text-bg-light"><%= listing.JobType %></span>
        </p>
        <% } %> <% if (listing.SalaryEstimate !== "None Given") { %>
        <p class="mb-0 py-0">
          <span class="badge text-bg-light"><%= listing.SalaryEstimate %></span>
        </p>
        <% } %>
      </div>
      <p class="mb-2"><small><%= listing.Summary %></small></p>
      <a
        href="<%= listing.Link %>"
        class="btn btn-light btn-outline-primary rounded-pill btn-sm"
        >Read more</a
      >
    </div>
  </div>
  <% } %> <% } else { %>
  <p>No last search results to display.</p>
  <% } %>
</div>
<%- include("templates/footer") %>
