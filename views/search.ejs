<%- include("templates/header") %>
<div class="search-container">
  <h4 class="search-heading" style="text-align: center">Search Jobs</h4>
  <form action="/search" method="GET">
    <input name="query" type="text" placeholder="Search jobs..." />
    <button type="submit">Search</button>
  </form>
  <h5>Last Search Term:</h5>
  <span class="badge text-bg-light"><%= lastSearchTerm %></span>

  <h5>Last Search Results:</h5>
  <% if (lastSearchResults.length > 0) { %> <% for (var i = 0; i <
  lastSearchResults.length; i++) { %> <% var listing = lastSearchResults[i]; %>
  <div class="card mb-3 shadow-sm" id="card-<%= listing._id %>">
    <div class="card-body">
      <div class="row">
        <h6 class="col"><%= listing.JobTitle %></h6>
      </div>
      <p class="mb-0">
        <i class="fas fa-building fa-sm"></i>
        <small><%= listing.CompanyName %></small>
      </p>
      <p class="mb-0">
        <i class="fa fa-map-marker-alt fa-sm"></i>
        <small><%= listing.Location %></small>
      </p>
      <div class="row d-flex flex-row">
        <% if (listing.JobType !== "None Given") { %>
        <p class="mb-0 py-0">
          <span class="badge text-bg-light"><%= listing.JobType %></span>
        </p>
        <% } %> <% if (listing.SalaryEstimate !== "None Given") { %>
        <p class="mb-0 py-0">
          <span class="badge text-bg-light"><%= listing.SalaryEstimate %></span>
        </p>
        <% } %>
      </div>
      <p class="mb-2"><small><%= listing.Summary %></small></p>
      <a
        href="<%= listing.Link %>"
        class="btn btn-light btn-outline-primary btn-sm"
        >Read more</a
      >
    </div>
  </div>
  <% } %> <% } else { %>
  <p>No last search results to display.</p>
  <% } %>
</div>
<%- include("templates/footer") %>
