<%- include("templates/header") %>
<h5 class="text-center mt-3">4 Results for "secret"</h5>
<% for (let job of fakeJobs) { %>
<div class="container mt-3">
  <div class="card mb-3 shadow-sm">
    <div class="card-body">
      <div class="row">
        <h6 class="col"><%= job.JobTitle %></h6>
      </div>
      <p class="mb-0">
        <i class="fas fa-building fa-sm"></i>
        <small><%= job.CompanyName %></small>
      </p>
      <p class="mb-0">
        <i class="fa fa-map-marker-alt fa-sm"></i>
        <small><%= job.Location %></small>
      </p>
      <div class="row">
        <p class="mb-0 py-0">
          <span class="badge text-bg-light"><%= job.JobType %></span>
        </p>
        <p class="mb-0 py-0">
          <span class="badge text-bg-light"><%= job.SalaryEstimate %></span>
        </p>
      </div>
      <p class="mb-2"><small><%= job.Summary %></small></p>
      <a href="" class="btn btn-light btn-outline-primary btn-sm" id="myModal"
        >Read more</a
      >
    </div>
  </div>
</div>

<% } %> <%- include("templates/footer") %>
