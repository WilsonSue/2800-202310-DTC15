<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Navigation Bar</title>
    <script
      src="https://kit.fontawesome.com/294e21ede5.js"
      crossorigin="anonymous"
    ></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="
        https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js
        "></script>
    <link
      href="
        https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css
        "
      rel="stylesheet"
    />
    <link rel="stylesheet" type="text/css" href="/css/easter.css" />
  </head>

  <body>
    <nav class="navbar">
      <div class="navbar-center logo">
        HOLY
        <a href="#">
          <img src="/image/Holygrail.webp" alt="HolyGrail" />
        </a>
        GRAIL
        <span class="hamburger" onclick="toggleMenu()">&#9776;</span>
      </div>
      <div class="mobile-menu" id="mobile-menu">
        <a href="/search">Search</a>
        <a href="/savedListings">Saved Listings</a>
        <a href="/userProfile">Profile</a>
        <a href="/logout">Logout</a>
      </div>
    </nav>
    <script>
      function toggleMenu() {
        var mobileMenu = document.getElementById("mobile-menu");
        if (
          mobileMenu.style.display === "none" ||
          mobileMenu.style.display === ""
        ) {
          mobileMenu.style.display = "flex";
        } else {
          mobileMenu.style.display = "none";
        }
      }
    </script>
  </body>
</html>
