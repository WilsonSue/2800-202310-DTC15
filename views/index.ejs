<%- include("templates/header") %>
<div class="container">
  <img src="image/Portfolio.svg" alt="home page illustration" />
</div>
<div class="text-center">
  <% if (!authenticated) { %>

  <button
    type="button"
    class="btn btn-lg btn-primary btn-block rounded-pill px-4 py-2 mb-3 mx-auto"
    id="login-btn"
  >
    <a href="/login">LOG IN</a>
  </button>
  <button
    type="button"
    class="btn btn btn-primary btn-block btn-raised rounded-pill px-4 py-2 mx-auto"
    id="signup-btn"
  >
    <a href="/signup">SIGN UP</a>
  </button>

  <% } else { %> Hello, <%= username %>!<br />
  <button><a href="/logout">LOG OUT</a></button>
  <% } %>
</div>
<%- include("templates/footer") %>
